@model Lab3.Models.Person
@{
    ViewData["Title"] = "DisplayPerson";
    Layout = "_Layout";
}

<h1>DisplayPerson</h1>
<table>
    <tr>
        <td>
            First Name:
            @ViewData["fName"]
        </td>
    </tr>
    <tr>
        <td>
            Last Name:
            @ViewData["lName"]
        </td>
    </tr>
    <tr>
        <td>
            Age:
            @ViewData["age"]
        </td>
    </tr>
    <tr>
        <td>
            Email Address:
            @ViewData["email"]
        </td>
    </tr>
    <tr>
        <td>
            Date of Birth:
            @ViewData["dob"]
        </td>
    </tr>
    <tr>
        <td>
            Password:
            @ViewData["password"]
        </td>
    </tr>
    <tr>
        <td>
            Description :
            @ViewData["description"]
        </td>
    </tr>
    <tr>
        <td>
            <input type="submit" value="Create" />
        </td>
    </tr>
</table>