@model Lab4.Models.ViewModels.CommunityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.First().EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Student)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="EditMembership" asp-route-id="@item.Id">Edit Memberships</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Memberships != null)
{
    <h3>
        Members of the Community:
    </h3>
    <table class="table">
        <tr>
            @if (Model.Memberships.Count() > 0)
            {
                <th> Name </th>
            }
            else
            {
                <p>Student is not enrolled in any community </p>
            }
        </tr>
        @foreach (var item in Model.Memberships.Select(i => i.Community))
        {
            <tr>
                <td>
                    @item.Title
                </td>
            </tr>
        }
    </table>
}